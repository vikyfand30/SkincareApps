<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProductView"
        android:layout_width="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="165dp"
            android:orientation="vertical"
            android:layout_height="233dp">

            <ImageView
                android:id="@+id/ivProductView"
                android:src="@drawable/img_m_product_01"
                android:layout_width="165dp"
                android:layout_height="146dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:id="@+id/tvProductNameView"
                android:textColor="@color/text_color_black"
                android:text="Eye Treatment Serum"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvProductPriceView"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="RP. 85.000"
                android:textColor="@color/golden"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>