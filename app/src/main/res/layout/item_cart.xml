<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProductCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_sized_ava" />

        <RelativeLayout
            android:id="@+id/llChartDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivProductCart"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCartProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tvCartProductPrice"
                android:fontFamily="@font/opensans_semibold"
                android:text="Eye Treatment Serum"
                android:textColor="@color/greyish_brown"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvCartProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/opensans_semibold"
                android:text="Rp 288.000"
                android:textColor="@color/greyish_brown"
                android:textSize="14sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tvCartProductQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llChartDesc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivProductCart"
            android:fontFamily="@font/opensans_semibold"
            android:text="Qty : 2"
            android:textColor="@color/warm_grey"
            android:textSize="12sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCartDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/llRight"
            android:src="@drawable/ic_delete" />


        <LinearLayout
            android:id="@+id/llRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivCartMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove" />

            <TextView
                android:id="@+id/tvCurrCart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivCartAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add" />
        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white_four" />
</LinearLayout>