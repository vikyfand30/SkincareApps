<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailMediaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/ivDetailMedia"
                android:layout_width="match_parent"
                android:src="@drawable/media_empat"
                android:layout_height="300dp"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@id/ivDetailMedia"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/greyish_brown"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:text="Customer Gathering 2019"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/warm_grey"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="15 Sept "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/greyish_brown"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, "
                    android:layout_height="wrap_content"/>






            </LinearLayout>


        </RelativeLayout>



    </ScrollView>

    <ImageView
        android:id="@+id/ivBackDetailMedia"
        android:src="@drawable/ic_32_close_grey"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>