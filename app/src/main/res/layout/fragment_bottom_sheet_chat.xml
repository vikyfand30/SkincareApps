<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    tools:context=".fragment.BottomSheetForgotPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

<TextView
    android:layout_width="wrap_content"
    android:text="Google Play"
    android:layout_margin="20dp"
    android:fontFamily="@font/opensans_semibold"
    android:textSize="20sp"
    android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white_two"/>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivVoucherChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sized_voucher_chat"/>

            <LinearLayout
                android:layout_toLeftOf="@+id/llEnd"
                android:layout_toRightOf="@+id/ivVoucherChat"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Voucher chat"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/greyish_brown"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="12sp"
                    android:text="5x Sesi Pertanyaan"
                    android:textColor="@color/warm_grey"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEnd"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/bluish_green"
                    android:text="Rp 90.000"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="disc -10%"
                    android:textSize="12sp"
                    android:textColor="@color/warm_grey"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="+Pajak"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_gravity="end"
                    android:textColor="@color/warm_grey"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/ivFingerprint"
            android:layout_width="100dp"
            android:src="@drawable/ic_fingerprint"
            android:layout_gravity="center"
            android:layout_height="100dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_semibold"
            android:layout_gravity="center"
            android:textColor="@color/black_54"
            android:text="Masukkan sidik jari untuk melanjutkan"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Gunakan Kata Sandi"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/bluish_green"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_semibold"
            android:layout_height="wrap_content"/>




    </LinearLayout>
</RelativeLayout>